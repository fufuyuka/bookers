<div>
  <%= flash[:notice] %>
</div>

<h2>Editing book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Books' %>
<% end %>

<%= link_to "Show", edit_book_path(@list.id) %><p>|</p>
<%= link_to "Back", books_path(@list.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
