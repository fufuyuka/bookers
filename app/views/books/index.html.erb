<h1>Books</h1>
<table>
    <thead>
      <th>Title</th><th>Body</th><th></th><th></th><th></th>
    </thead>
    <tbody class="bookdate">
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to 'Destroy', books_path, method: :delete, data: {comfirm: "Are you sure?"} %></td>
      </tr>
      <% end %>
    </tbody>
</table>

<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

  <label>Title</label>
  <div class="field">
    <%= f.text_field :title %>
  </div>

  <label>Body</label>
  <div class="field">
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Books' %>
  </div>

<% end %>